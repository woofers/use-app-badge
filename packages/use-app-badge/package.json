  "scripts": {
    "test": "bun typecheck && bun test --slient false",
    "lint": "eslint \"src/**/*.{jsx,js,tsx,ts}\"",
    "typecheck": "tsc --p .",
    "types": "echo 1",
    "build": "bun lint && bun build:nolint",
    "build:nolint": "bun typecheck && bun clean && bun types && bun build:module && bun build:dev:module && bun run build:legacy && bun build:dev:legacy",
    "build:module": "bun build ./src/index.ts --outdir ./lib --external react --minify --define __isDev__=false --entry-naming=use-app-badge.mjs",
    "build:dev:module": "bun build ./src/index.ts --outdir ./lib --external react --minify --define __isDev__=true --entry-naming=use-app-badge.dev.mjs",
    "build:dev:legacy": "esbuild ./lib/use-app-badge.dev.mjs --outfile=./lib/use-app-badge.dev.js --format=cjs --minify",
    "build:legacy": "esbuild ./lib/use-app-badge.mjs --outfile=./lib/use-app-badge.js --format=cjs --minify",
    "clean": "rimraf lib/use-app-badge.dev.js lib/use-app-badge.js lib/use-app-badge.dev.mjs lib/use-app-badge.mjs"
  },
  "peerDependencies": {
    "react": "^0.13.0 || ^0.14.0 || >=15"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^14.0.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^12.0.0",
    "@types/bun": "^1.0.12",
