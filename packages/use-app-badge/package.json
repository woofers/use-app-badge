{
  "name": "use-app-badge",
  "version": "0.1.5",
  "description": "Navigator Badge API wrapper for React",
  "sideEffects": false,
  "main": "./lib/cjs/index.production.js",
  "module": "./lib/es/index.production.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "development": {
        "types": "./lib/index.d.ts",
        "import": "./lib/es/index.development.mjs",
        "default": "./lib/cjs/index.development.js"
      },
      "production": {
        "types": "./lib/index.d.ts",
        "import": "./lib/es/index.production.mjs",
        "default": "./lib/cjs/index.production.js"
      }
    }
  },
  "files": [
    "lib",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "repository": "https://github.com/woofers/use-app-badge",
  "keywords": [
    "notification",
    "badge",
    "navigator",
    "react",
    "reactjs",
    "cross-browser",
    "push",
    "dot",
    "standardized"
  ],
  "author": "Jaxson Van Doorn <jaxson.vandoorn@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/woofers/use-app-badge/issues"
  },
  "homepage": "https://jaxs.onl/use-app-badge/",
  "scripts": {
    "build": "bunchee -m && ./build.sh && ./restore.sh",
    "build-publish": "bunchee -m && ./build.sh && npm publish && ./restore.sh",
    "dev": "bunchee --watch -m",
    "test": "bun typecheck",
    "lint": "eslint \"src/**/*.{jsx,js,tsx,ts}\"",
    "typecheck": "tsc --p .",
    "clean": "rimraf lib"
  },
  "peerDependencies": {
    "react": "^0.13.0 || ^0.14.0 || >=15"
  },
  "dependencies": {
    "standardized-app-badge": "^0.1.5"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^12.0.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^14.0.0",
    "@types/bun": "^1.0.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "bunchee": "^5.1.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.49.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^12.1.6",
    "microbundle": "^0.15.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}